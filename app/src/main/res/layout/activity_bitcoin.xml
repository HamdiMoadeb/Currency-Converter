<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".BitcoinActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/exchange"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:text="From 1 BITCOIN"
        android:textSize="25sp"
        android:textColor="#5900FD"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text=" --> To"
        android:textSize="25sp"
        android:textColor="#5900FD"
        android:layout_height="wrap_content"/>

    <com.scrounger.countrycurrencypicker.library.Buttons.CountryCurrencyButton
        android:id="@+id/btntobtc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:country_code="TN"
        android:backgroundTint="#AEE7E0"
        app:show_currency="true" />

    <Button
        android:layout_width="match_parent"
        android:text="Convert"
        android:id="@+id/convertbtnbtn"
        android:backgroundTint="#5900FD"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:text="1 BTC = "
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="#5900FD"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="#5900FD"
        android:id="@+id/totextbtc"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"/>


</LinearLayout>